<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="800" spacing="20"
      style="-fx-background-color: linear-gradient(to bottom right, #FFF7E6, #FFE0CC);"
      styleClass="root-pane"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="application.AboutController">

    <!-- Title -->
    <Label text="About MyWallet"
           style="-fx-text-fill: linear-gradient(to right, #FF8A65, #FF7043);
                  -fx-font-size: 26px;
                  -fx-font-family: 'Arial Black';
                  -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 6, 0, 0, 2);"
           styleClass="currentTab-label">
        <font>
            <Font size="26.0" />
        </font>
    </Label>

    <!-- About Text -->
    <TextArea fx:id="aboutText" editable="false" prefHeight="400" prefWidth="760"
              style="-fx-control-inner-background: #FFFFFF;
                     -fx-text-fill: #444444;
                     -fx-font-size: 15px;
                     -fx-font-family: 'Segoe UI';
                     -fx-border-color: #FFB499;
                     -fx-border-width: 1.5;
                     -fx-border-radius: 10;
                     -fx-background-radius: 10;
                     -fx-padding: 12;
                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0.2, 0, 2);"
              wrapText="true" />

    <!-- Back Button -->
    <Button fx:id="backButton"
            onAction="#handleBackButtonAction"
            text="Back"
            style="-fx-background-color: linear-gradient(to right, #FFA41B, #FF6F00);
                   -fx-text-fill: white;
                   -fx-font-size: 14px;
                   -fx-font-family: 'Segoe UI';
                   -fx-font-weight: bold;
                   -fx-background-radius: 10;
                   -fx-border-radius: 10;
                   -fx-padding: 8 20;"
            styleClass="styled-button" />
</VBox>

