<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>

<AnchorPane styleClass="root-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.HomeController">
    
    <!-- Separator Line -->
    <Line endX="780" endY="80" startX="10" startY="80" stroke="white" strokeWidth="2" />
    
    <!-- Dashboard Label -->
    <Label fx:id="dashboardLabel" layoutX="10" layoutY="90" styleClass="currentTab-label" text="Dashboard" />
    
    <!-- User Balance Information -->
    <Label fx:id="balanceLabel" layoutX="10" layoutY="140" styleClass="title-label" text="Balance: 0.0" />
    <Label fx:id="welcomeLabel" layoutX="155.0" layoutY="38.0" styleClass="title-label" text="Hi, " />
    <Label fx:id="dateTimeLabel" layoutX="500" layoutY="140" styleClass="title-label" text="- - -" />
    
    <!-- Placeholder Circle for Pie Chart -->
    <Circle fx:id="placeholderCircle" fill="lightgray" layoutX="210" layoutY="350" radius="90" stroke="black" strokeWidth="2" />

    <!-- Pie Chart -->
    <PieChart fx:id="pieChart" layoutX="10" layoutY="200" prefHeight="300" prefWidth="400" styleClass="pie-chart" />

    <!-- Recent Transactions Label -->
    <Label fx:id="recentTransactionsLabel" layoutX="490" layoutY="220" styleClass="title-label" text="Recent Transactions" />

    <!-- Recent Transactions VBox -->
    <VBox fx:id="recentTransactionsBox" layoutX="450" layoutY="250" prefHeight="250" prefWidth="300" spacing="5" styleClass="recent-transactions-box" />
    
    <!-- Separator Line -->
    <Line endX="780" endY="535" startX="10" startY="535" stroke="white" strokeWidth="2" />
    
    <!-- Bottom Navigation Buttons -->
    <Button fx:id="dashboardButton" layoutX="10" layoutY="550" styleClass="green-button" text="     Dashboard     " />
    <Line endX="162" endY="592" startX="162" startY="545" stroke="white" strokeWidth="2" />
    
    <Button fx:id="DWbutton" layoutX="180" layoutY="550" onAction="#handleDWButtonAction" styleClass="styled-button" text=" Deposit/Withdrawal " />
    <Line endX="356" endY="592" startX="356" startY="545" stroke="white" strokeWidth="2" />
    
    <Button fx:id="sendreceiveButton" layoutX="369" layoutY="550" onAction="#handleSendReceiveButtonAction" styleClass="styled-button" text="    Send/Receive    " />
    <Line endX="528" endY="592" startX="528" startY="545" stroke="white" strokeWidth="2" />
    
    <Button fx:id="transactionsButton" layoutX="540" layoutY="550" onAction="#handleTransactionButtonAction" styleClass="styled-button" text="    Transactions    " />
    <Line endX="695" endY="592" startX="695" startY="545" stroke="white" strokeWidth="2" />    

    <Button fx:id="backButton" layoutX="710" layoutY="550" onAction="#handleLogOutButtonAction" styleClass="styled-button" text="Log Out" />

</AnchorPane>
