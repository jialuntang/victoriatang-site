<?xml version="1.0" encoding="UTF-8"?>

<!-- Import required JavaFX components -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<!-- Root container -->

<AnchorPane style="-fx-background-color: #FFF7E6;" styleClass="root-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TransactionsController">

    <!-- App Title -->
    <Label layoutX="10" layoutY="10" style="-fx-text-fill: #FF8A65; -fx-font-size: 24px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI'; -fx-background-color: #FFE0B2; -fx-padding: 5 15; -fx-background-radius: 15; -fx-border-color: #FFB499; -fx-border-width: 2; -fx-border-radius: 15;" styleClass="home-title-label" text="MyWallet" />

    <!-- Separator Line -->
    <Line endX="780" endY="80" startX="10" startY="80" stroke="#FFB499" strokeWidth="1.5" />

    <!-- Page Title -->
    <Label fx:id="transactionLabel" layoutX="10" layoutY="90" style="-fx-text-fill: #FF8A65; -fx-font-size: 20px; -fx-font-family: 'Segoe UI';" styleClass="currentTab-label" text="Transactions" />

    <!-- Scrollable Transaction List -->
    <ScrollPane fx:id="transactionScrollPane" hbarPolicy="NEVER" layoutX="20" layoutY="140" prefHeight="380" prefWidth="760" style="-fx-background: #FFF7E6; -fx-border-color: #FFB499; -fx-border-width: 1; -fx-border-radius: 8;" styleClass="transaction-scroll-pane" vbarPolicy="ALWAYS">
        <VBox fx:id="transactionsBox" spacing="10" styleClass="transaction-box">
            <!-- Placeholder Label (optional, dynamic content should be loaded via controller) -->
            <Label style="-fx-text-fill: #FF8A65; -fx-font-size: 18px; -fx-font-family: 'Segoe UI';" styleClass="title-label" text="Transaction History" />
        </VBox>
    </ScrollPane>

    <!-- Separator Line -->
    <Line endX="780" endY="535" startX="10" startY="535" stroke="#FFB499" strokeWidth="1.5" />

    <!-- Bottom Navigation Buttons -->
    <Button fx:id="dashboardButton" layoutX="10" layoutY="550" onAction="#handleDashboardButtonAction" style="-fx-background-color: #FFA41B; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-background-radius: 8;" styleClass="styled-button" text="     Dashboard     " />
    <Line endX="200" endY="592" startX="200" startY="545" stroke="#FFB499" strokeWidth="1.5" />
    
    <Button fx:id="DWbutton" layoutX="220" layoutY="550" onAction="#handleDepWidthButtonAction" style="-fx-background-color: #FFA41B; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-background-radius: 8;" styleClass="styled-button" text=" Deposit/Withdrawal " />
    <Line endX="400" endY="592" startX="400" startY="545" stroke="#FFB499" strokeWidth="1.5" />
    
    <Button fx:id="transactionsButton" layoutX="420" layoutY="550" style="-fx-background-color: #FFA41B; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-background-radius: 8;" styleClass="styled-button" text="    Transactions    " />
    <Line endX="600" endY="592" startX="600" startY="545" stroke="#FFB499" strokeWidth="1.5" />
    
    <Button fx:id="logOutButton" layoutX="620" layoutY="550" onAction="#handleLogOutButtonAction" style="-fx-background-color: #FFA41B; -fx-text-fill: white; -fx-font-family: 'Segoe UI'; -fx-font-size: 14px; -fx-background-radius: 8;" styleClass="styled-button" text="Log Out" />

</AnchorPane>
