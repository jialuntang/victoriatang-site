<?xml version="1.0" encoding="UTF-8"?>

<!-- Import required JavaFX components -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>

<!-- Root container -->

<AnchorPane styleClass="root-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.DepWidthController">

    <!-- App Title -->
    <Label layoutX="10" layoutY="10" styleClass="home-title-label" text="MyWallet" />

    <!-- Separator Line -->
    <Line endX="780" endY="80" startX="10" startY="80" stroke="white" strokeWidth="2" />

    <!-- Page Title -->
    <Label fx:id="depWitLabel" layoutX="10" layoutY="90" styleClass="currentTab-label" text="Deposit / Withdraw" />

    <!-- User Balance Display -->
    <Label fx:id="balanceLabel" layoutX="10" layoutY="140" styleClass="title-label" text="Balance: 0.0" />

    <!-- Deposit and Withdrawal Section -->
    <TextField fx:id="wageField" layoutX="315" layoutY="250" promptText="Enter Amount" styleClass="title-label" />
               
    <Button fx:id="depositButton" layoutX="300" layoutY="300" onAction="#handleDepositButtonAction" styleClass="styled-button" text="Deposit" />
            
    <Button fx:id="withdrawButton" layoutX="400" layoutY="300" onAction="#handleWithdrawButtonAction" styleClass="styled-button" text="Withdraw" />

    <!-- Separator Line -->
    <Line endX="780" endY="535" startX="10" startY="535" stroke="white" strokeWidth="2" />

       <!-- Bottom Navigation Buttons -->
    <Button fx:id="dashboardButton" layoutX="10" layoutY="550" onAction="#handleDashboardButtonAction" styleClass="styled-button" text="     Dashboard     " />
            
    <Line endX="162" endY="592" startX="162" startY="545" stroke="white" strokeWidth="2" />
    
    <Button fx:id="void" layoutX="180" layoutY="550" styleClass="green-button" text=" Deposit/Withdrawal " />
    
    <Line endX="356" endY="592" startX="356" startY="545" stroke="white" strokeWidth="2" />
    
    <Button fx:id="sendreceiveButton" layoutX="369" layoutY="550" onAction="#handleSendReceiveButtonAction" styleClass="styled-button" text="    Send/Receive    " />
    
    <Line endX="528" endY="592" startX="528" startY="545" stroke="white" strokeWidth="2" />
    
    <Button fx:id="transactionsButton" layoutX="540" layoutY="550" onAction="#handleTransactionButtonAction" styleClass="styled-button" text="    Transactions    " />
    
    <Line endX="695" endY="592" startX="695" startY="545" stroke="white" strokeWidth="2" />
    
    <Button fx:id="logOutButton" layoutX="710" layoutY="550" onAction="#handleLogOutButtonAction" styleClass="styled-button" text="Log Out" />


</AnchorPane>
